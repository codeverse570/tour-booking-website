header.header 
       nav.nav.nav--tours 
         a(href="/").nav__el All tours
         form.nav__search
            button.nav__search-btn 
               svg 
                  use(xlink:href="/img/icons.svg#icon-search")
            input(type="text" placeholder="Search tours").nav__search-input
       div.header__logo 
         img(src="/img/logo-white.png" alt="Natours logo")
   
       nav.nav.nav--user
         if user
          a.nav__el.nav__el--logout log out
          a(href="/me").nav__el
             img(src=`/img/users/${user.photo}` onerror="this.onerror=null; this.src='/img/users/default.jpg'").nav__user-img
             span=user.name 
         if !user
          a(href="/login").nav__el Log in 
          a(href='/signup').nav__el.nav__el--cta Sign Up